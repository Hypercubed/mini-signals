{
  "$schema": "https://www.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2020",
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["es2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.spec.d.ts", "**/*.test-d.ts", "node_modules", "dist", "tests"]
}